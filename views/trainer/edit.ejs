<form action="trainers/update/<%= trainer[0].id %>" name="trainerEditForm" class="w-full max-w-lg">
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3 mb-6 md:mb-0">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-state"> Title </label>
			<div class="relative">
				<select class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" name="title">
					<% if (trainer[0].title.toLowerCase() == "mr.") { %>
					<option value="MR." selected>Mr.</option>
					<option value="MS.">Ms.</option>
					<% } %> <% if (trainer[0].title.toLowerCase() == "ms.") { %>
					<option value="MR.">Mr.</option>
					<option value="MS." selected>Ms.</option>
					<% } %> <% if (trainer[0].title.toLowerCase() != 'mr.' ||trainer[0].title.toLowerCase() != 'ms.' ) { %>
					<option value="MR.">Mr.</option>
					<option value="MS.">Ms.</option>
					<% } %>
				</select>
				<div class="absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
					<svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /></svg>
				</div>
			</div>
		</div>
	</div>
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name"> First Name </label>
			<input value="<%= trainer[0].first_name %>" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" name="first_name" type="text" placeholder="" />
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name"> Last Name </label>
			<input value="<%= trainer[0].last_name %>" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" name="last_name" type="text" placeholder="" />
		</div>
	</div>
	<div class="flex flex-wrap justify-end -mx-3 mb-2">
		<div class="px-3">
			<input class="cursor-pointer w-full bg-blue-500 text-white rounded py-3 px-4 mb-3 hover:bg-blue-600" type="submit" value="Submit" />
		</div>
	</div>
</form>

<script src="trainerEditForm.js"></script>
